@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.BasicContentPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "BasePage.cshtml";
}
@Umbraco.RenderMacro("Breadcrumb")

<div class="content">
    @Html.Partial("SiteComponents/PageBanner")
    <section class="BodyContent">
        <div class="container">
            <div class="row">
                <section class="intro">
                    <p>@Umbraco.Field("intro", encoding: RenderFieldEncodingType.Html)</p>
                </section>
                <section class="bodycontent">
                    @Html.Raw(Umbraco.Field("bodyTekst"))
                </section>
            </div>
        </div>
    </section>
</div>

