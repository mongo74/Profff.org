@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.OverOns>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "BasePage.cshtml";
}
@{ var selection = CurrentPage.Children.Where("Visible"); }

@Umbraco.RenderMacro("Breadcrumb")

<div class="content">
    @Html.Partial("SiteComponents/PageBanner")

    <section class="BodyContent">
        <div class="container">
            <div class="row">
                
                <section class="intro">
                    <p>@Umbraco.Field("intro", encoding: RenderFieldEncodingType.Html)</p>
                </section>
               
                <section class="bodycontent">
                    @Html.Raw(Umbraco.Field("bodyTekst"))
                </section>
                <section class="bodycontent">
                    @if (selection.Any())
{
    foreach (var item in selection)
    {
        <article class="news-item has-divider clearfix row">
            <h3>
                @item.GetPropertyValue("pageTitle")
            </h3>
            <figure class="thumb col-md-2 col-sm-3 col-xs-4">

            </figure>
            <div class="details col-md-9 col-sm-8 col-xs-7 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
                <p>
                    @item.GetPropertyValue("intro")
                </p>
                <a href="@item.Url">
                    <span class="read-more">Read more<i class="fa fa-chevron-right iconBehind"></i></span>
                </a>
            </div>
        </article>
    }
}
                    
                </section>
            </div>
        </div>
    </section>
</div>



